<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestCenter"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="TestCenter.HomePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="403*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FF2B5DAE" Background="#FF333333" BorderThickness="0,0,0,2" CornerRadius="4,4,0,0" VerticalAlignment="Bottom" Margin="3,0,3,0" Height="27">
            <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Grid.Column="2"  HorizontalAlignment="Left" Margin="10,0,0,0" Text="Home Page" Padding="3,7,0,0" FontSize="14"/>
        </Border>

        <Border Grid.Row="1"  Grid.RowSpan="3" BorderBrush="#FF2B5DAE" Background="#FF4D4D4D" BorderThickness="0" CornerRadius="0,0,0,4" Margin="3,0,3,3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"  BorderBrush="#FF2B5DAE" Background="#FF333333" BorderThickness="0,0,0,2" CornerRadius="4,4,0,0" VerticalAlignment="Bottom" Margin="3,3,3,0">
                    <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Grid.Column="2"  HorizontalAlignment="Center" Margin="10,0,0,0" Text="Select PCB to Test:" Padding="3,7,0,0" FontSize="14"/>
                </Border>
                <ScrollViewer Grid.Row="1">
                    <!-- Content Area -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="60*"/>
                        </Grid.RowDefinitions>
                        <ComboBox Name="unitSelect" Grid.Row="0" VerticalAlignment="Top" Text="JetPower 4" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="JetPower 4"/>
                            <ComboBoxItem Content="Agile Air"/>
                            <ComboBoxItem Content="Mobile Mag"/>
                            <ComboBoxItem Content="SJ"/>
                        </ComboBox>
                        <!--Border Grid.Row="0"  BorderBrush="#FF2B5DAE" Background="#FF333333" BorderThickness="0,0,0,2" CornerRadius="0" VerticalAlignment="Bottom" Margin="3,0,3,0">
                            <TextBlock Grid.Row="1" Text="JetPower 4:" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Bottom" FontFamily="Segoe UI Variable Display Semibold" FontSize="24"/>
                        </Border-->

                        <Border Grid.Row="1" BorderBrush="#FF2B5DAE" Background="#FF333333" BorderThickness="0" CornerRadius="0,0,4,4" VerticalAlignment="Center" Margin="3,0,3,3" Height="355">

                            <ListBox x:Name="ProductList" FontFamily="Segoe UI Variable Display Semibold" SelectionChanged="ListBox_SelectionChanged">
                                <ListBoxItem x:Name="INT" Foreground="White" Visibility="Visible" FontFamily="Segoe UI Variable Display Semibold" Content="-Interface Board"/>
                                <ListBoxItem x:Name="Hz400" Foreground="White" Visibility="Visible" FontFamily="Segoe UI Variable Display Semibold" Content="-400Hz Regulator Board"/>
                                <ListBoxItem x:Name="SRT" Foreground="White" Visibility="Visible" FontFamily="Segoe UI Variable Display Semibold" Content="-Switch Relay Terminal Board"/>
                                <ListBoxItem x:Name="BUS" Foreground="White" Visibility="Visible" FontFamily="Segoe UI Variable Display Semibold" Content="-Bus Charge Board"/>
                            </ListBox>

                        </Border>
                    </Grid>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</Page>
