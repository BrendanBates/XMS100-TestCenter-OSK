<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestCenter"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="TestCenter.TestsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestsPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FF1A1A1A">
        <!-- Main Split Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="403*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="143*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" BorderBrush="#FF2B5DAE" Background="#FF333333" BorderThickness="0" CornerRadius="4,4,0,0" VerticalAlignment="Bottom" Margin="3,0,3,0" Height="27">
                <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="85,0,0,0" Text="Test Page" Padding="3,7,0,0" FontSize="14"/>
            </Border>
            <Button Style="{StaticResource HomeButton}" FontFamily="Segoe UI Variable Display Semibold" Content="Back" Margin="3,0,0,0" Click="Button_Click" Grid.Row="0" Grid.Column="0" Height="27" Width="75" VerticalContentAlignment="Bottom"/>
        </Grid>
        <Grid Grid.Row="1">

            <Border Grid.RowSpan="2" BorderBrush="#FF2B5DAE" Background="#FF4D4D4D" BorderThickness="0,2,0,0" CornerRadius="0,0,0,4" Margin="3,0,3,3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>


                        <Border Grid.Column="0" Grid.Row="1" Background="#FF333333" Margin="12,0,1,0" CornerRadius="4,4,0,0"  BorderThickness="0,0,0,2" BorderBrush="#FF2B5DAE">
                            <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Text="TESTS" Padding="5" Height="30"/>
                        </Border>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="264*"/>
                            <ColumnDefinition Width="131*"/>
                            <ColumnDefinition Width="399*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="RunBTN" Grid.Column="1" Grid.Row="2" 
                                Content="Run" 
                                Foreground="AntiqueWhite" 
                                Background="#FF1A1A1A" 
                                Margin="22,5,5,5" Height="NaN" Width="NaN" 
                                Click="Run_Click" 
                                FontSize="10"/>

                        <ProgressBar Grid.Column="2" Grid.Row="2" 
                                 Name="testProgressBar" 
                                 Minimum="0" Maximum="100" Value="0"
                                 Height="23" Margin="0,0,10,0"
                                 Foreground="#FF559CE4" 
                                 Background="#FF1A1A1A"
                                 BorderBrush="#FF2B5DAE"
                                 BorderThickness="1"/>
                    </Grid>

                    
                    <Border Grid.Row="2" Grid.Column="1" Background="#FF333333" Margin="21,2,11,0" CornerRadius="4"  BorderThickness="0" Width="NaN">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Name="progressText" Grid.Row="0" 
                                       Style="{StaticResource TestText}" 
                                       VerticalAlignment="Center" Text="Ready" 
                                       Padding="10,5,0,0" Height="NaN" HorizontalAlignment="Left"  
                                       Background="#FF333333" FontSize="16"/>
                            
                            <TextBlock Name="statusText" Grid.Row="1" 
                                       Style="{StaticResource TestText}" 
                                       VerticalAlignment="Center" Text="Ready" 
                                       Padding="10,0,5,5" Height="NaN" HorizontalAlignment="Left"  
                                       Background="#FF333333" FontSize="16"/>
                            
                            <Border Grid.Row="2" Background="#FF4D4D4D" Padding="5" CornerRadius="4" Margin="3,0,3,3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="Passed: " 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="22"/>
                                        <TextBlock Name="passedCNTText" Grid.Column="1" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="" 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="22"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="Failed: " 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="22"/>
                                        <TextBlock Name="failedCNTText" Grid.Column="1" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="" 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="22"/>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="Results:" 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="28"/>
                                        <TextBlock Name="resultsText" Grid.Column="1" 
                                                   Style="{StaticResource TestText}" 
                                                   VerticalAlignment="Center" Text="" 
                                                   Padding="5,0,0,0" Height="NaN" HorizontalAlignment="Left"  
                                                   Background="#FF4D4D4D" FontSize="28"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <Grid Grid.Row="2" Grid.Column="0" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Margin="12,0,1.66,0" Background="#FF333333" CornerRadius="0">
                            <Border  Margin="5" Background="#FF4D4D4D" CornerRadius="2">
                                <ScrollViewer VerticalScrollBarVisibility="Visible" >
                                    <Border Margin="0,0,10,0" Background="#FF3C3C3C" BorderBrush="#FF333333" BorderThickness="0" CornerRadius="2,0,0,2" Padding="0,0,0,0">
                                        <StackPanel x:Name="testsPannel" Margin="3,0,0,0" Background="#FF3C3C3C" />
                                    </Border>
                                 </ScrollViewer>
                            </Border>
                        </Border>

                        <Border Grid.Row="1" Background="#FF333333" Margin="12,0,1.67,5" CornerRadius="0,0,4,4" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="115"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Select All Tests Button -->
                                <Button x:Name="SelectAllBTN" Content="Select All" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#FF1A1A1A" Margin="7,5,5,5" Height="NaN" FontSize="10" Width="100" Click="SelectAllBTN_Click"/>
                                <!-- Selected Tests Out of Total Tests-->
                                <TextBlock x:Name="NumTestsDisplay" Grid.Column="1" Style="{StaticResource TestText}" HorizontalAlignment="Left" Background="#FF333333" FontSize="13" VerticalAlignment="Center" Text="Selected Tests: " Padding="5,5,0,5" Height="30"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1" x:Name="ExpandGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toggle Button Header Section -->
                        <Border Grid.Row="0" Background="#FF333333" Margin="19.66,5,10,0" CornerRadius="4,4,0,0" BorderBrush="#FF2B5DAE" BorderThickness="0,0,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Results/Description Toggle Button -->
                                <ToggleButton x:Name="ResultsToggle" 
                                            Grid.Column="0"
                                            Content="Results/Description"
                                            IsChecked="True"
                                            Background="#FF333333"
                                            Foreground="White"
                                            BorderThickness="0,0,0,2"
                                            BorderBrush="#FF2B5DAE"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Padding="10,8"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Click="ResultsToggle_Click">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="ResultsBorder"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4,0,0,0">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="ResultsBorder" Property="Background" Value="#FF2B5DAE"/>
                                                            </Trigger>
                                                            <Trigger Property="IsChecked" Value="False">
                                                                <Setter TargetName="ResultsBorder" Property="Background" Value="#FF333333"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- CAN Data Toggle Button -->
                                <ToggleButton x:Name="CANDataToggle" 
                                              Grid.Column="1"
                                              Content="CAN Data"
                                              IsChecked="False"
                                              Background="#FF333333"
                                              Foreground="White"
                                              BorderThickness="0,0,0,2"
                                              BorderBrush="#FF2B5DAE"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Padding="10,8"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Click="CANDataToggle_Click">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="CanDataBorder"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="0,4,0,0">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="CanDataBorder" Property="Background" Value="#FF2B5DAE"/>
                                                            </Trigger>
                                                            <Trigger Property="IsChecked" Value="False">
                                                                <Setter TargetName="CanDataBorder" Property="Background" Value="#FF333333"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- Content Section -->
                        <Border Grid.Row="1" Background="#FF333333" Margin="19.66,0,10,0" BorderThickness="0">
                            <Border Margin="5" CornerRadius="2" Background="#FF4D4D4D">
                                <Grid>
                                    <!-- Results/Description Content -->
                                    <ScrollViewer x:Name="ResultsScrollViewer"
                                                VerticalScrollBarVisibility="Auto" 
                                                HorizontalScrollBarVisibility="Disabled"
                                                Visibility="Visible">
                                        <Border Margin="0,0,10,0" Background="#FF3C3C3C" BorderBrush="#FF3C3C3C" 
                                                BorderThickness="0" CornerRadius="2,0,0,2" Padding="2,2,0,2">
                                            <StackPanel x:Name="rslts_SP" Margin="0,0,0,0" Background="#FF3C3C3C"/>
                                        </Border>
                                    </ScrollViewer>

                                    <!-- CAN Data Content -->
                                    <ScrollViewer x:Name="CANDataScrollViewer"
                                                VerticalScrollBarVisibility="Auto" 
                                                HorizontalScrollBarVisibility="Disabled"
                                                Visibility="Collapsed">
                                        <Border Margin="0,0,10,0" Background="#FF3C3C3C" BorderBrush="#FF3C3C3C" 
                                                BorderThickness="0" CornerRadius="2,0,0,2" Padding="2,2,0,2">
                                            <StackPanel x:Name="can_SP" Margin="0,0,0,0" Background="#FF3C3C3C">
                                                <TextBlock Text="Analogs" Style="{StaticResource Header}" Background="#FF3C3C3C"/>
                                                <StackPanel x:Name="analogs_SP"/>

                                                <TextBlock Text="Errors" Style="{StaticResource Header}" Background="#FF3C3C3C"/>
                                                <StackPanel x:Name="error_SP"/>

                                                <TextBlock Text="Warnings" Style="{StaticResource Header}" Background="#FF3C3C3C"/>
                                                <StackPanel x:Name="warning_SP"/>

                                                <TextBlock Text="Status" Style="{StaticResource Header}" Background="#FF3C3C3C"/>
                                                <StackPanel x:Name="status_SP"/>
                                            </StackPanel>
                                        </Border>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- Print Button -->
                        <Border Grid.Row="2" Background="#FF333333" Margin="19.66,0,9.67,5" CornerRadius="0,0,4,4" BorderThickness="0,1,0,0" BorderBrush="#FF2B5DAE">
                            <Button x:Name="PrintPDFBTN" Content="Print PDF" Foreground="AntiqueWhite" Background="#FF1A1A1A" HorizontalAlignment="Right" Margin="0,5,20,5" Height="20" FontSize="10" Width="100" Click="PrintPDFBTN_Click" />
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

